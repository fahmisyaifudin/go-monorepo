{
    "name": "workspace",
    "private": true,
    "scripts": {
        "lint": "biome lint --write .",
        "format": "biome check --write . && biome format . --write",
        "cleanup": "pnpm --recursive --parallel --stream run cleanup && pnpm run cleanup-workspace",
        "cleanup-workspace": "rimraf pnpm-lock.yaml node_modules",
        "update-deps": "npm-check-updates --configFileName .ncurc.json",
        "preinstall": "pnpm dlx only-allow pnpm && moon setup",
        "submodule:init": "git submodule update --init --recursive",
        "submodule:update": "git submodule update --remote --recursive --merge"
    },
    "devDependencies": {
        "@biomejs/biome": "1.8.3",
        "npm-check-updates": "^17.0.2",
        "rimraf": "^6.0.1",
        "typescript": "^5.5.4"
    },
    "packageManager": "pnpm@9.6.0"
}
